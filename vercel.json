{
  "version": 2,
  "framework": "vite",
  "buildCommand": "prisma db push && vite build",
  "outputDirectory": "dist",
  "functions": {
    "api/index.js": {
      "includeFiles": "prisma/**",
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    { "src": "^/api/.*", "dest": "/api/index.js" },
    { "src": "^(?!/api/).*", "dest": "/" }
  ]
}
