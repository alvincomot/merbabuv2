{
  "version": 2,
  "functions": {
    "api/index.js": {
      "runtime": "nodejs20",
      "includeFiles": [
        "prisma/**",
        "node_modules/.prisma/**"
      ]
    }
  },
  "routes": [
    { "src": "^/api/.*", "dest": "/api/index.js" },
    { "src": "^(?!/api/).*", "dest": "/" }
  ],
  "buildCommand": "vite build",
  "outputDirectory": "dist"
}