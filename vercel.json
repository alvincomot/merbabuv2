{
  "version": 2,
  "functions": {
    "api/index.js": {
      "includeFiles": "node_modules/.prisma/**"
    }
  },
  "routes": [
    { "src": "^/api/.*", "dest": "/api/index.js" },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/index.html" }
  ],
  "buildCommand": "vite build",
  "outputDirectory": "dist"
}
